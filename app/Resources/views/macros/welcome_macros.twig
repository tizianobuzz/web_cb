    <div class="text-main-container">
    <p> {{title|default('TITOLO DELL"EVENTO VA QUI')}} </p>
    <p> {{introText|default('Intro deve andare qui dell\' evento....')}} </p>
    </div>
    <div class="bottom-link-container"><a href="{{ link|default('') }}">Scopri &gt;&gt; </a></div>
</div>

{% endmacro calendarbox %}
