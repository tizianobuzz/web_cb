{% macro newsbox(breaking, date, title, link) %}

<div class="newsbox">
<span class="newsbox-status-label" style="background: {{ breaking ? '#ff3300' : 'whitesmoke' }}">RECENTE</span><span class="newsbox-date-label">{{ date|default('21 Dicembre 1998') }}</span>
<p> {{ title|default('SOME NEWS SHOULD GO HERE...') }} </p>
<a href="{{ link|default('') }}">Vai alla notizia >></a>
</div>

{% endmacro newsbox%}

{% macro calendarbox(day, month, year, title, introText, link) %}

<div class="calendarbox">
<!-- div may not be necessay for the date labels. Paddings could be used, or non-floating solutions -->
